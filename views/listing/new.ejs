<% layout("/layouts/boilerPlate") %>
    <body>
        <div class="newPage">
            <form class="newForm needs-validation" style="height: 80vh;" action="/listings" method="post" novalidate enctype="multipart/form-data"> 
                <div>
                    <label for="title" class="form-label">Title:</label>
                    <input id="title" class="form-control" type="text" name="title" placeholder="Enter the Title"
                        required>
                    <div class="valid-feedback">Seems a Good Title</div>
                    <div class="invalid-feedback">Title is required</div>
                </div>
                <div>
                    <label for="image" class="form-label">Image:</label>
                    <input type="file" class="form-control" id="image"
                        name="image" required>
                    <div class="invalid-feedback">Image is required</div>
                </div>
                <div>
                    <label class="form-label" for="description">Description:</label>
                    <textarea name="description" class="form-control" id="description" cols="30" rows="2"
                        placeholder="Write description" required></textarea>
                    <div class="invalid-feedback">Description is required</div>
                </div>
                <div>
                    <label class="form-label" for="price">Price:</label>
                    <input class="form-control" id="price" name="price" placeholder="Enter the price" required>
                    <div class="invalid-feedback">Price is required</div>
                </div>
                <div>
                    <label class="form-label" for="location">Location:</label>
                    <input id="location" class="form-control" type="text" name="location"
                        placeholder="Enter the Location" required>
                    <div class="invalid-feedback">Location is required</div>
                </div>
                <div>
                    <label class="form-label" for="country">Country:</label>
                    <input id="country" type="text" class="form-control" name="country" placeholder="Enter the Country"
                        required>
                    <div class="invalid-feedback">Country is required</div>
                </div>
                <br>
                <button class="btnRed">Submit</button>
            </form>
        </div>
        <script src="/js/script.js"></script>
    </body>